#:include pipe.kv

FloatLayout:
    Backround:
        id: backround
        canvas.before:
            Rectangle:
                size: self.size
                pos: self.pos
                source: "sky.png"
            Rectangle:
                size: self.width, 138
                pos: self.pos[0], self.pos[1] + self.height - 138
                texture: self.cloud_texture
            Rectangle:
                size: self.width, 96
                pos: self.pos[0], self.pos[1]
                texture: self.floor_texture

    Label:
        text: "0"
        size_hint_y: None  #let you specify
        height: 96
        id: score
        font_size: 40

    Button:
        text: "start game"
        background_normal: "transparent.png"
        background_down: "transparent.png"
        id: button
        on_release:
            self.disabled = True
            self.opacity = 0
            app.start_game()
    Bird:
        source: "bird1.png"
        size_hint: None, None
        size: 46, 34
        pos: 20, (root.height - 96) / 2
        id: bird
